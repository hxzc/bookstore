<!DOCTYPE html>
<html>
  <head>
    <title>Bookstore</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body class="store">
    <div class="top">
      <%=image_tag("logo.png")%>
      <%="BookStore"%>
    </div>
    <div class="content">
      <div class="left">
        <div><%=@time%></div>
        <div id="cart">
          <%if @cart%>
            <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
              <%= render(@cart) %>
            <% end %>
          <% end %>
        </div>
      	<ul>
         <li><a href="http://www.baidu.com">百度一下</a></li> 
         <li><a href="http://www.baidu.com">百度一下</a></li> 
        </ul>
      </div>
      <div class="main">
      	<%= yield %>
      </div>
    </div>
  </body>
</html>
