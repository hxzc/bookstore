<!DOCTYPE html>
<html>
  <head>
    <title>Bookstore</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body class="store">
    <div class="top">
      <%=image_tag("logo.png")%>
      <%="BookStore"%>
    </div>
    <div class="content">
      <div class="left">
        <div id="cart">
        <%if @cart%>
          <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
            <%= render(@cart) %>
          <% end %>
        <%end%>
        </div>
      	<ul>
          <li><a href="http://www.baidu.com">百度一下</a></li> 
          <li><a href="http://www.baidu.com">百度一下</a></li> 
          <% if session[:user_id] %>
          <br/>
          <li><%=link_to '订单',orders_path %></li><br/>
          <li><%=link_to '商品',products_path %></li><br/>
          <li><%=link_to '用户',users_path %></li><br/><br/>
          <%=button_to '退出',logout_path,method: :delete%>
          <% end %>
        </ul>
      </div>
      <div class="main">
      	<%= yield %>
      </div>
    </div>
  </body>
</html>
