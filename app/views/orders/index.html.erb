<h1><%=t('.list_orders')%></h1>
<table>
  <tr>
    <th><%=t('.name')%></th>
    <th><%=t('.address')%></th>
    <th><%=t('.email')%></th>
    <th><%=t('.pay_type')%></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @orders.each do |order| %>
  <tr>
    <td><%= order.name %></td>
    <td><%= order.address %></td>
    <td><%= order.email %></td>
    <td><%= order.pay_type %></td>
    <td><%= link_to t('.show'), order %></td>
    <td><%= link_to t('.edit'), edit_order_path(order) %></td>
    <td><%= link_to t('.destroy'), order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to t('.new'), new_order_path %>
<p><%=will_paginate @orders,{previous_label:t('.previous'),next_label:t('.next')}%></p>
